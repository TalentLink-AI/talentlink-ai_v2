# Application Settings
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://mongodb:27017/talentlink

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.talentlink.com
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com
AUTH0_WEBHOOK_SECRET=your-auth0-webhook-secret

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# API Service URLs (for local development)
USER_SERVICE_URL=http://user-service:3001
JOB_SERVICE_URL=http://job-service:3002
PAYMENT_SERVICE_URL=http://payment-service:3003
MESSAGING_SERVICE_URL=http://messaging-service:3004
CONTENT_SERVICE_URL=http://content-service:3005

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=talentlink-uploads

# Email Service
EMAIL_SERVICE=ses  # Options: ses, sendgrid, smtp
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:4200

# Security
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# Feature Flags
ENABLE_MFA=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_SUBSCRIPTIONS=false